<% layout('../layout/boilerplate.ejs') -%>
<div class="container margin ">
        <div class="listings ">
        <h2 style="color: black;">My Booking</h2>
        <% if(user.booking.length>0){%>
        <div style="width: 90vw;" class="row d-flex align-items-center cards justify-content-center  row-cols-lg-5 row-cols-md-3 row-cols-sm-2 row-cols-1">
            <% for(booking of user.booking){ %>
                <div class="listing-card col" style="width: 20rem;">
                    <div class="image-wrapper position-relative">
                            <a class="<%= booking.status === 'Cancelled' ? 'blurred' : '' %>" href="/mybooking/<%= booking._id%>">
                            <img src="<%= booking.listing.image.url %>"  class="card-img-top <%= booking.status === 'Cancelled' ? 'blurred' : '' %>" alt="listing image">
                            </a>
                            <% if(booking.status === "Processing") {%>
                            <div class="booking-overlay" style="background-color: orange;">Booking under processing</div>
                            <% } else if(booking.status === "Cancelled"){%>
                                <div class="cancel-overlay" style="background-color: red;">Booking <%=booking.status%></div>
                            <%}else{%>
                                  <div class="booking-overlay" style="background-color:green;">Booking <%=booking.status%></div>
                                <% } %>          
                            
                    </div>
                    <div class="card-body">
                    <div class="title <%= booking.status === 'Cancelled' ? 'blurred' : '' %>"><h5 class="card-title"> <a id="titleanchor" href="/mybooking/<%=booking._id%>"><%=booking.listing.title%></a></h5></div>
                        <p class="card-text <%= booking.status === 'Cancelled' ? 'blurred' : '' %>">Total Amount: â‚¹<%= booking.totalAmount.toLocaleString("en-IN") %></p>
                        <a href="/mybooking/<%= booking._id%>" class="btn btn-primary">View More</a>
                    </div>
                </div>
                <% } %>
            </div>
            <% } else{ %>
  <style>
    .container {
      text-align: center;
      color: #3E4C8A;
    }

    .container img {
      width: 150px;
      margin-bottom: 20px;
    }

    .container h2 {
      margin: 0;
      font-size: 24px;
    }

    .container p {
      margin-top: 10px;
      color: #FF385C;
      font-size: 14px;
    }
  </style>

  <div class="container " style="margin-top: 10rem;">
    <img src="https://cdn-icons-png.flaticon.com/512/4076/4076549.png" alt="No Booking Illustration">
    <h2>No Booking Found</h2>
  </div>
          <% } %>
        </div>
    </div>

<style>

    .image-wrapper {
    position: relative;
}

.booking-overlay {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: rgba(40, 167, 69, 0.85); /* Bootstrap green */
    color: white;
    padding: 6px 12px;
    border-radius: 5px;
    font-weight: bold;
    font-size: 0.9rem;
    z-index: 2;
}
.cancel-overlay {
  position: absolute;
  top: 45%;
  left: 50%;
  border-radius: 1rem;
  transform: translate(-50%, -50%);
  font-size: 1.8rem;
  color: white;
  background-color: rgba(255, 0, 0, 0.8);
  padding: 0.5rem 2rem;
  font-weight: bold;
  border-radius: 8px;
  z-index: 2;
  pointer-events: none;
}

.blurred {
  filter: blur(2px);
  pointer-events: none; /* disables all interaction */
  opacity: 0.6;
}
</style>